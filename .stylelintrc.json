{
  "extends": [
    "stylelint-config-standard",
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind"
        ]
      }
    ],
    "color-named": "never",
    "color-hex-case": "lower",
    "prettier/prettier": true
  }
}
